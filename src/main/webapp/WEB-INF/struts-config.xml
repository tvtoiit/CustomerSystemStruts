<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean
            name="loginBean"
            type="fjs.cs.dto.mstuser"/>
        <form-bean
            name="searchBean"
            type="fjs.cs.dto.mstcustomer"/>
		</form-beans>
	
	 <global-forwards>
        <forward
        	name="T001"
        	path="/pages/T001.jsp"/>
    </global-forwards> 
    
    <action-mappings>
        <action
        	input="/pages/T001.jsp"
           	path="/T001"
            type="fjs.cs.action.T001"
            validate="true"
            name="loginBean"
			scope="request">
            <forward name="success" path="/T002.do"/>
            <forward name="fail" path="/pages/T001.jsp"/>
            
        </action>
       
        <action
        	input="/pages/T002.jsp"
           	path="/T002"
            type="fjs.cs.action.T002"
            validate="false"
            name="searchBean"
			scope="request">
			 <forward name="successT002" path="/pages/T002.jsp"/>
        </action>
        
        <action 
        	input="/pages/T003.jsp"
        	path="/T003"
        	validate="true"
        	type="fjs.cs.action.T003"
        	name="searchBean"
        	scope="request">
        	<forward name="T002" path="/T002.do"/>
        	<forward name="T003" path="/pages/T003.jsp"/>
        </action>
        <action
        	path="/save-user"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="/pages/T003.jsp">
        </action>
        
       <!-- <action 
        	path="/save-user" 
        	type="fjs.cs.action.T003" 
        	name="searchBean"
        	parameter="saveCustomer">
        	 <forward name="T002" path="/T002.do"/>
        </action>
         <action 
        	path="/edit-user" 
        	type="fjs.cs.action.T003" 
        	name="searchBean"
        	parameter="updateCustomer">
        	 <forward name="T002" path="/T002.do"/>
        	 <forward name="T003" path="/pages/T003.jsp"/>
        </action>  -->
	</action-mappings>
	
	<message-resources parameter="messages" />
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
    <set-property property="definitions-config"
        value="/WEB-INF/tiles-defs.xml" />
    <set-property property="moduleAware" value="true" />
</plug-in>
</struts-config>